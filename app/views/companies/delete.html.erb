
<div class="span-6">
<h2>Are you sure you want to delete:</h2>
<%= form_for @company, :url => {:action => 'destroy'}, :method => 'delete' do %> 
<table class="table table-bordered">
	<tr>
		<th>Company</th>
		<td><%= @company.name %></td>
	</tr>
		
</table>
<button type="submit" class="btn btn-primary btn-large">Confirm Delete</button> Or <%= link_to "Cancel", companies_url %>
<% end %>

</div>