<div class="row">
	<div class="span-12 offset4">
		<h1 class="offset2">Dashboard</h1>
		<div class="span-6 dash">
			<table class="table table-bordered">				
				<tr>
					<th>Job Title</th>
					<th>Company</th>
					<th>Application Date</th>		
				</tr>				
				<% @user.jobs.each do |job| %>				
				<tr>		
					<td><%= link_to "#{job.job_title}", job_url(job) %></td>
					<td><%= link_to "#{job.company.name}", company_url(job.company) %></a></td>
					<td><%= job.application_date %></td>		
				</tr>
				<% end %>
			</table>
			<span class="span-3"><%= link_to "Add Job", new_job_url %></span>
			<span class="span-3"><%= link_to "See All Jobs", jobs_url %></span>
		</div>

		<div class="span-6 dash">
			<table class="table table-bordered">			
				<tr>
					<th>Company</th>					
				</tr>
				<% @user.companies.each do |company| %>
				<tr>		
					<td><%= link_to "#{company.name}", company_url(company) %></a></td>	
				</tr>
				<% end %>
			</table>
			<span class="span-3"><%= link_to "Add Company", new_company_url %></span>
			<span class="span-3"><%= link_to "See All Companies", companies_url %></span>
		</div>
	</div>
</div>

