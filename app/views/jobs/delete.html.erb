<div class="span-6">
<h2>Are you sure you want to delete:</h2>
<%= form_for @job, :url => {:action => 'destroy'}, :method => 'delete' do %> 
<table class="table table-bordered">
	<tr>
		<th>Job Title</th>
		<td><%= @job.job_title %></td>
	</tr>
	<tr>
		<th>Company</th>
		<td><%= @job.company.name %></td>
	</tr>
	<tr>
		<th>Application Date</th>
		<td><%= @job.application_date%></td>
	</tr>
		
</table>

<button type="submit" class="btn btn-primary btn-large">Confirm Delete</button> Or <%= link_to "Cancel", jobs_url %>
<% end %>

</div>